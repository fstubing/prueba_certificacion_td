{{>navbar}}

{{#if serieRender}}
{{#each serieRender}}
<hr>
<article class="container my-3">
  
    <h2 class="text-center">{{this.titulo}}</h2>
    <img src="../public/img/{{this.imagen_entrada}}" alt="imagen {{this.titulo}}" class="img-fluid rounded mx-auto d-block"> 
  <section class="d-flex flex-column justify-content-center align-items-center">
    <p class="mt-3"><b>Escrito por:</b></p>
    <div class="d-flex flex-row">
      <img src="../public/img/{{this.imagen_autor}}" alt="imagen avatar" class="img-thumbnail" style="width: 100px; height: 100px;">
      <p class="ps-2 align-self-end">{{this.autor}}</p>
    </div>
    <p class="mt-3"><b>Fecha:</b>  {{fecha this.fecha_creacion}}</p>
    <p><b>Categoria:</b> {{this.nombre}}</p>
    <p>Id: <span id="idEntrada">{{this.id}}</span></p>
  </section>

    <hr>

    <p>{{this.cuerpo}}</p>
</article>
{{/each}}
{{else}}
  <main>
    <h2 class="text-center">{{error}}</h2>
    <a class="btn btn-secondary d-flex justify-content-center" href="/">VOLVER AL HOME</a>
  </main>
  

{{/if}}
    
    <div class="container">
        <hr>
        <p>¿Qué tal te pareció la noticia?</p>
        <button class="btn btnReact" id="green"><i class="fa fa-thumbs-up fa-lg" aria-hidden="true"></i></button> <span id="meGusta">0</span>
        <button class="btn btnReact" id="red"><i class="fa fa-thumbs-down fa-lg" aria-hidden="true"></i></button> <span id="noMeGusta">0</span>
    </div>  


  <div class="container mt-5">
    <p><span id="contadorComentarios">0</span> Comentarios</p>
    <hr>
    <form id="comentarioForm">
      <div class="mb-3">
        <label for="comentarioCuerpo" class="form-label"><b>Puedes comentar en esta sección:</b></label>
        <textarea class="form-control" id="comentarioCuerpo" name="comentarioCuerpo" rows="3" required maxlength="300"></textarea>
      </div>
      <div>
        <p id="cuerpoContador" class="ps-1">0/300</p>
      </div>
      <button type="submit" class="btn btn-primary">Comentar!</button>
    </form>
  </div>
 
  {{#if comentariosRender}}
  {{#each comentariosRender}}
  <hr>
  <div class="container mt-3 comentarios">
    <div class="card mb-3" style="height: 200px;">
      <div class="row g-0">
        <div class="col-3 col-md-2 col-lg-1">
          <img src="../public/img/{{avatar}}" class="img-thumbnail" style="width: 100px; height: 100px;" alt="imagen avatar">
        </div>
        <div class="col-9 col-md-10 col-lg-11">
          <div class="card-body">
            <h5 class="card-title">{{nombre}} {{apellido}} comentó:</h5>
            <p class="card-text">{{contenido}}</p>
            <div class="card-footer">
              <p class="card-text"><small class="text-body-secondary">{{fecha fecha_creacion}}</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}

{{>footer}}

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://use.fontawesome.com/fe459689b4.js"></script>
<script src="../public/js/comentarios.js"></script>
<script src="../public/js/login.js"></script>